<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="medialog.maxtheme">

  <!-- 'Maxtheme Theme' Zope 3 browser layer
    Register views, viewlets and resources for this layer to make sure
    they only apply to the 'Maxtheme Theme' theme.
    You can also use this layer to override default Plone browser views
    and viewlets only within the 'Maxtheme Theme' theme.
  -->
  <interface
      interface=".interfaces.IThemeSpecific"
      type="zope.publisher.interfaces.browser.IBrowserSkinType"
      name="Maxtheme Theme"
      />
  
    <browser:viewlet
       name="maxtheme_siteactions"
       manager="plone.app.layout.viewlets.interfaces.IPortalHeader"
       class="plone.app.layout.viewlets.common.SiteActionsViewlet"
       template="maxtheme_siteactions.pt"
       permission="zope2.View"
       layer=".interfaces.IThemeSpecific"
       />


    <browser:viewlet
       name="maxtheme_colophon"
       manager="plone.app.layout.viewlets.interfaces.IPortalFooter"
       template="maxtheme_colophon.pt"
       permission="zope2.View"
       layer=".interfaces.IThemeSpecific"
       />
  
  <!-- A browser view to cook all css and js resources so you dont need to 
       restart plone or put portal_css in debug mode to see the changes
  -->
       
    <browser:page 
    	name="cookview"
  	    for="*"
  	    permission="cmf.ManagePortal"
  	    class=".views.CookView"
        layer=".interfaces.IThemeSpecific"
    />  
    
    <browser:page 
    	name="backup"
  	    for="*"
  	    permission="cmf.ManagePortal"
  	    class=".views.ZexpExportView"
        layer=".interfaces.IThemeSpecific"
    />  
    
  <!-- A portlet manager
  -->

    <browser:viewlet
        name="maxtheme.topportlets"
        manager="plone.app.layout.viewlets.interfaces.IPortalHeader"
        template="topportlets.pt"
        layer=".interfaces.IThemeSpecific"
        permission="zope2.View" 
    />    
    
    <browser:page
        for="plone.portlets.interfaces.ILocalPortletAssignable"
        class="plone.app.portlets.browser.manage.ManageContextualPortlets"
        name="manage-topportlets"
        template="managetopportlets.pt"
        layer=".interfaces.IThemeSpecific"
        permission="plone.app.portlets.ManagePortlets"
    />

  <!-- Zope 3 browser resources -->

  <!-- Resource directory for images
    See medialog/maxtheme/browser/images/README.txt
    for more information about registering images as Zope 3 browser
    resources.
  -->
  <browser:resourceDirectory
      name="medialog.maxtheme.images"
      directory="images"
      layer=".interfaces.IThemeSpecific"
      />

  <!-- Resource directory for stylesheets
    See medialog/maxtheme/browser/stylesheets/README.txt
    for more information about registering stylesheets as Zope 3 browser
    resources.
  -->
  <browser:resourceDirectory
      name="medialog.maxtheme.stylesheets"
      directory="stylesheets"
      layer=".interfaces.IThemeSpecific"
      />
      


</configure>
